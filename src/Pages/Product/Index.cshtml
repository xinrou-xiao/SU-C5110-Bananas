@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Index page";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb" style="background: none; color: white;">
        <li class="breadcrumb-item"><a href="/Index" style="color: white;">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Admin</li>
    </ol>
</nav>

<div class="container">
    <div>
        <!-- Create button -->
        <button class="btn-warning btn create-btn" onclick="location.href='/Product/Create'">Create</button>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="col-6">Title</th>
                <th class="col-6">Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td class="align-middle title-in-table">
                        <!-- Link to read product details -->
                        <a asp-page="/Product/Read" asp-route-id="@product.Id">@product.Title</a>
                    </td>
                    <td>
                        <!-- Read button -->
                        <button class="read-btn btn" onclick="location.href='/Product/Read/@product.Id';">Read</button>

                        <!-- Update button -->
                        <button class="update-btn btn" onclick="location.href='/Product/Update/@product.Id';">Update</button>

                        <!-- Delete button -->
                        <button class="delete-btn btn" onclick="location.href='/Product/Delete/@product.Id';">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>