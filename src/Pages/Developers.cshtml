@page
@model ContosoCrafts.WebSite.Pages.DevelopersModel
@{
    ViewData["Title"] = "Developers";
}

<partial name="Breadcrumb" />

<div class="privacy-page-text">
    <h2>Developer Information</h2>
</div>

<div class="tile-container">
    @foreach (var developer in Model.Developers)
    {
        <div class="tile">
            <h3>@developer.Name</h3>
            <div class="image-container">
                <img src="@developer.ImageUrl" alt="Developer Image" class="developer-image" />
            </div>
            <a href="mailto:@developer.Email" class="btn btn-primary">Email : @developer.Name</a>
        </div>
    }
</div>

<style>
    .tile-container 
    {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .tile 
    {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 15px;
        text-align: center;
        /* Default width for larger screens */
        width: 36%; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        /* Dark background for contrast */
        background-color: #333; 
        /* White text color */
        color: white; 
    }

    .image-container 
    {
        width: 100%;
        /* 1:1 aspect ratio */
        padding-top: 100%; 
        position: relative;
    }

    .developer-image 
    {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /* Ensures the image covers the area without distortion */
        object-fit: cover; 
        border-radius: 10px;
    }

    .btn-primary 
    {
        margin-top: 10px;
    }

    /* Media query for mobile devices */
    @@media (max-width: 768px) 
    {
        .tile 
        {
            /* Make cards full width on smaller screens */
            width: 100%; 
        }
    }
</style>