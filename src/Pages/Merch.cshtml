@page
@model ContosoCrafts.WebSite.Pages.MerchModel
@{
    ViewData["Title"] = "Merchandise";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb" style="background: none; color: white;">
        <li class="breadcrumb-item"><a href="/Index" style="color: white;">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Merch</li>
    </ol>
</nav>

<div class="container merch-page">
    <!-- Add stars dynamically -->
    <div class="stars">
        @for (int i = 0; i < 100; i++)
        {
            <div class="star" style="top:@(new Random().Next(0, 100))%; left:@(new Random().Next(0, 100))%;"></div>
        }
    </div>
    <h1 class="merch-title">Anime Merchandise</h1>
    <div class="row">
        @foreach (var merch in Model.Merchandise)
        {
            <div class="col-md-3 mb-4">
                <!-- Each card takes 1/4 of the row -->
                <div class="card">
                    <img src="@merch.ImageUrl" class="card-img-top" alt="@merch.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@merch.Title</h5>
                        <p class="card-text">@merch.Description</p>
                        <div class="hashtags">
                            @foreach (var hashtag in merch.Hashtags)
                            {
                                <span class="badge bg-secondary">#@hashtag</span>
                            }
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <span class="price">$@merch.Price</span>
                            <a href="@merch.BuyLink" class="btn btn-primary" target="_blank">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="quick-links-box mt-4">
        <h4>Top Shopping Picks</h4>
        <ul class="list-unstyled">
            <li><a href="https://store.crunchyroll.com/" target="_blank">Crunchyroll Store</a><p>- A wide selection of anime merchandise, from clothing to exclusive collectibles.</p></li>
            <li><a href="https://otakumode.com/" target="_blank">Tokyo Otaku Mode</a> <p>- Offers rare and limited-edition items directly from Japan</p></li>
            <li><a href="https://www.anime-expo.org/anime-expo-chibi/merch/" target="_blank">Anime expo Store</a><p> -  Official merchandise from anime conventions and events.</p></li>
            <li><a href="https://atsuko.com/" target="_blank">Atsuko Store</a><p>- Exclusive, officially licensed anime apparel and accessories, celebrating Japanese culture.</p></li>
        </ul>
    </div>
</div>